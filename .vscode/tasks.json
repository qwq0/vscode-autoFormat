    "version": "2.0.0",
    "tasks": [
        {
            "label": "rollup",
            "type": "shell",
            "command": "rollup -i src/main.js -o dist/main.js -f cjs --watch --sourcemap",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "vsce package",
            "type": "shell",
            "command": "vsce package -o \"dist/qwq0-autoFormat.vsix\"",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}